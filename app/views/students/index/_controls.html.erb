<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <%= link_to  new_student_path , remote: true , class: 'btn btn-sm btn-outline-info'  do %>
      <span>Add Student</span>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2 move-buttons">
      <%= link_to students_path , class: 'btn btn-sm btn-outline-info' do %>
      <i class="fa fa-sync"></i>
      <% end %>
      <button type="button" class="btn btn-sm btn-outline-info"><i class="fa fa-filter"></i></button>
      <button type="button" class="btn btn-sm btn-outline-info"><i class="fa fa-file-excel"></i> Excel</button>
      <button type="button" class="btn btn-sm btn-outline-info"><i class="fa fa-file-csv"></i> CSV</button>
    </div>
  </div>
</div>