<div class="table-responsive">
  <table  class="table-id display course-table table table-striped table-sm">
    <thead>
      <tr align="center">
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Enrollments</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr class="display-6" align="center">
        <td><h6 class='text-info font-weight-bold'><%= student.first_name %> <%= student.last_name %></h6></td>
        <td><h6><%= student.age %></h6></td>
        <td><%= student.gender %></td>
        <td><h6><%= truncate(student.address , length: 20 ) %></h6></td>
        <td><h6><%= student.mobile_number %></h6></td>
        <td><h6><%= student.email_id %></h6></td>
        <td><h6><%= student.course.name %></h6></td>
        <td>
          <%= link_to student_path(student) , class: 'btn btn-sm btn-success' do %>
          <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to edit_student_path(student) , remote: true , class: 'btn btn-sm btn-warning' do %>
          <i class="fa fa-pencil-alt"></i>
          <% end %>
          <%= link_to student_path(student) , method: :delete , data: { confirm: 'Are you sure you want to delete this Student'}, class: 'btn btn-sm btn-danger' do %>
          <i class="fa fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

