<div class="container float-center">
	<div class="card text-center mt-4 ml-4">
	  <div class="card-header bg-info">
	   <h2 class="text-white"> <%= @student.first_name %> <%= @student.last_name %>'s Profile</h2>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Age : <%= @student.age %></h5>
	    <h5 >Gender : <%= @student.gender %></h5>
	    <h5 class='card-text'>Phone : <%= @student.mobile_number %></h5>
	    <h5 class="card-text">Address : <%= @student.address %></h5>

	    <h5 class="card-text font-weight-bold">Enrolled in : 
	     <%= @student.course.name  %>
	     </h5>

	    <%= link_to 'Delete' , student_path(@student) , method: :delete , data: { confirm: 'Are you sure about this' } , 
	    class: 'btn btn-outline-danger mt-4' %>
	    <%= link_to 'Edit' , edit_student_path(@student) , remote: true , class: 'btn btn-outline-warning mt-4' %>
	    <%= link_to 'Back' , students_path , class: 'btn btn-outline-secondary mt-4' %>
	  </div>
	  <div class="card-footer text-muted bg-info">
	   <p class="text-white"> Updated   <%= time_ago_in_words(@student.updated_at) %> ago <br>
	    					  Created  <%= time_ago_in_words(@student.created_at) %> ago </p>
	  </div>
	</div>
</div>